# Portfolio Application - Environment Variables Example
# Copy this file to .env and update values as needed

# ===== Database =====
DATABASE_URL=postgres://portfolio:portfolio123@postgres:5432/portfolio?sslmode=disable
POSTGRES_USER=portfolio
POSTGRES_PASSWORD=portfolio123
POSTGRES_DB=portfolio

# ===== Server =====
SERVER_PORT=:8080
ENVIRONMENT=production

# ===== Frontend =====
VITE_API_URL=http://localhost:8080/api

# ===== CORS =====
CORS_ORIGIN=http://localhost:3000,http://localhost

# ===== Session =====
SESSION_SECRET=your-secret-key-change-in-production

# ===== Email (Optional) =====
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
CONTACT_EMAIL=your-contact-email@example.com

# ===== Logging =====
LOG_LEVEL=info
LOG_FORMAT=json

# ===== Security =====
JWT_SECRET=your-jwt-secret-key-change-in-production
JWT_EXPIRY=24h
